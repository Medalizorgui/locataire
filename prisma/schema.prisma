generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chambre {
  id             Int     @id @default(autoincrement())
  name           String
  description    String?
  property       String
  tenantName     String?
  tenantPhone    String?
  tenantIdFront  String?
  tenantIdBack   String?
  tenantContract String?
  months         Month[]

  @@map("Chambre")
}

model Month {
  id                  Int     @id @default(autoincrement())
  chambreId           Int
  month               String
  compteurEau         Int
  montantEau          Float
  compteurElectricite Int
  montantElectricite  Float
  fraisLouer          Float
  paye                Boolean @default(false)
  chambre             Chambre @relation(fields: [chambreId], references: [id])

  @@map("Month")
}
model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  @@map("User")
}
